[Unit]
 Description = Java Service
 After network.target = spring-petclinic.service
[Service]
 Type = forking
 Restart=always
 RestartSec=1
 SuccessExitStatus=143 
 ExecStart = /usr/local/bin/spc.sh start
 ExecStop = /usr/local/bin/spc.sh stop
 ExecReload = /usr/local/bin/spc.sh reload
[Install]
 WantedBy=multi-user.target
